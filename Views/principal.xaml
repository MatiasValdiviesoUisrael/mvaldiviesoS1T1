<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mvaldiviesoS1T1.Views.principal"
             Title="principal">
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label 
            Text="Semana 1 - Taller 1"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Identificación:" />
        <Entry x:Name="txtIdentificacion" Keyboard="Text" Placeholder="Cédula/Pasaporte" />
        <Entry x:Name="txtIdentificacion2" Keyboard="Numeric" Placeholder="Nùmero" />

        <Label Text="Apellidos:" />
        <Entry x:Name="txtApellidoPaterno" Placeholder="Paterno" Keyboard="Text"/>
        <Entry x:Name="txtApellidoMaterno" Placeholder="Materno" Keyboard="Text"/>

        <Label Text="Nombres completos:" />
        <Entry x:Name="txtNombres" Keyboard="Text"/>

        <Label Text="Teléfono personal:" />
        <Entry x:Name="txtTelefono" Keyboard="Telephone" />

        <Label Text="Correo personal:" />
        <Entry x:Name="txtCorreo" Keyboard="Email" />

        <Label Text="Confirmar correo:" />
        <Entry x:Name="txtConfirmarCorreo" Keyboard="Email" />

        <Label Text="Carrera" />
        <Entry x:Name="txtCarrera" Keyboard="Text"/>

        <Label Text="Modalidad" />
        <Entry x:Name="txtModalidad" Keyboard="Text"/>

        <Label Text="Campus" />
        <Entry x:Name="txtCampus" Keyboard="Text"/>

        <Button Text="Enviar Inscripción" Clicked="Button_Clicked" />
    </VerticalStackLayout>
</ContentPage>